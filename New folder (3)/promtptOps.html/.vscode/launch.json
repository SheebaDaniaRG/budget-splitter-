{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "serve-frontend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend Server",
            "program": "${workspaceFolder}/event-platform-backend/server.js",
            "cwd": "${workspaceFolder}/event-platform-backend",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ],
    "compounds": [
        {
            "name": "Full Stack",
            "configurations": ["Backend Server", "Launch Chrome against localhost"]
        }
    ]
}